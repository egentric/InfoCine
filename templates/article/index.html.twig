{% extends 'base.html.twig' %}

{% block title %}Présentation Article{% endblock %}

{% block body %}
    <h1>Présentation Article</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Titre</th>
                <th>Date de sortie</th>
                <th>Contenu</th>
                <th>Video</th>
                <th>Date de création</th>
                <th>Date de modification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td><img src="{{ asset('uploads/photos/' ~ article.img) }}" width="50"></td>
                <td>{{ article.title }}</td>
                <td>{{ article.dateRelease }}</td>
                <td>{{ article.contents }}</td>
                <td>{{ article.video }}</td>
                <td>{{ article.dateCreate ? article.dateCreate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.dateEdit ? article.dateEdit|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">Afficher</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Nouvelle Article</a>
{% endblock %}
