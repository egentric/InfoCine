{% extends 'base.html.twig' %}

{% block title %}{{ 'id': category.nameCategory }}% endblock %}

{% block body %}
{% for article in articles %}
    <h1>{{ article.title}}</h1>
<article>
				

					<div class="card mb-3" style="max-width: 98%;">
						<div class="row g-0">
							<div class="col-md-4">
								<img src="{{ asset('uploads/photos/' ~ article.img) }}" class="img-fluid rounded-start" alt="...">
							</div>
							<div class="col-md-8">
								<div class="card-body">
									<h5 class="card-title">{{ article.title }}</h5>
                                    <p class="card-text">{{ article.dateRelease }}</p>
									<p class="card-text">{{ article.contents|raw }}</p>
									<div id='blogvision'>
																<iframe src='{{ article.video }}' style='width:380px; height:170px'></iframe>
															</div>

								</div>
							</div>
						</div>
					</div>
				
			</article>
            {% endfor %}
{% endblock %}
