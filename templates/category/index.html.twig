{% extends 'baseAdmin.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1>Categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Noms Categories</th>
                <th>Date de Cr√©ation</th>
                {# <th>Date de modification</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.nameCategory }}</td>
                {# <td>{{ category.dateCreate ? category.dateCreate|date('Y-m-d H:i:s') : '' }}</td> #}
                <td>{{ category.dateEdit ? category.dateEdit|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}"><i class="fas fa-plus-square"></i></a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}"><i class="fas fa-folder-plus"></i></a> Nouveau
{% endblock %}
